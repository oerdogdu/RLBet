<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.solstice.atoi.rlbet.LoginScreen"
    android:background="#1569C7">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/rocket_league_logo"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        android:layout_marginStart="98dp"/>

    <ImageButton
        android:id="@+id/imgBtnGoogle"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:background="#1569C7"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:src="@drawable/googleplus_rectangle"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imgBtnFacebook"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="#1569C7"
        android:layout_height="80dp"
        android:src="@drawable/facebookrectangle"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="#1569C7"
            android:textSize="30sp"
            android:textColor="#FFFF"
            android:layout_marginTop="15dp"
            android:onClick="onClick"
            android:text="Login"
            android:layout_weight="1"/>

        <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#1569C7"
        android:textSize="30sp"
        android:textColor="#FFFF"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Register"
        android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
